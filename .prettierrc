{
  "trailingComma": "none",
  "singleQuote": true,
  "tabWidth": 4,
  "overrides": [
      {
          "files": "**/src/**/*.html",
          "options": { "parser": "lwc" , "tabWidth": 3 }
      },
      {
        "files": "**/src/**/*.js",
        "options": { "tabWidth": 2 }
      },
      {
          "files": "*.{cmp,page,component}",
          "options": { "parser": "html" }
      }
  ]
}